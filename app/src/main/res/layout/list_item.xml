            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/currencyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currencyName"
            android:layout_marginTop="-2dp"
